.row
  .col
    %h1.mt-3.mb-3.text-center
      Öppna Förskolor Malmö

    %nav.nav
      .nav-link.active
        %span
          Sortering:

      = link_to_if_else_span @view.position?, href: root_path, class: 'nav-link' do
        = image_tag "clock.svg", class: 'icon'
        %span Öppettider

      = link_to_if_else_span !@view.position?, href: '#', id: 'toggle_position', class: 'nav-link' do
        = image_tag "map-marker.svg", class: 'icon'
        %span Avstånd

    #alert.alert.alert-warning{role: :alert, style: "display: none;"}
      Det gick inte att hämta din position.
      Prova igen!

    .row
      = render partial: 'home/index/preschool', collection: @view
